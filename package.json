	"author": "Adam Braimbridge <adam@braimbridge.com>",
	"license": "MIT",
	"dependencies": {
		"@cloudant/cloudant": "^4.2.0",
		"emoji-js": "^3.4.1",
		"emoji-picker-react": "^2.1.1",
		"gotrue-js": "^0.9.25",
		"node-sass": "^4.12.0",
		"pouchdb": "^7.1.1",
		"react": "^16.10.2",
		"react-dom": "^16.10.2",
		"react-scripts": "3.2.0",
		"uuid-by-string": "^3.0.2"
	},
	"devDependencies": {
		"@adambraimbridge/prettierrc-2019-05": "^1.0.0",
		"bootstrap": "^4.3.1",
		"bootswatch": "^4.3.1",
		"eslint": "^6.6.0",
		"eslint-config-prettier": "^6.4.0",
		"eslint-plugin-prettier": "^3.1.1",
		"eslint-plugin-react-hooks": "^2.3.0",
		"netlify-cli": "^2.20.2",
		"prettier": "^1.18.2"
	},
	"prettier": "@adambraimbridge/prettierrc-2019-05",
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"dev": "netlify dev",
		"dev-live": "netlify dev --live"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"eslint:recommended",
			"plugin:prettier/recommended"
		],
		"plugins": [
			"react-hooks"
		],
		"rules": {
			"react-hooks/rules-of-hooks": "error",
			"react-hooks/exhaustive-deps": "warn"
		},
		"env": {
			"es6": true,
			"node": true,
			"jest": true
		},
		"parserOptions": {
			"sourceType": "module",
			"ecmaVersion": 2018
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
