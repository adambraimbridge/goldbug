{
	"name": "goldbug.club",
	"version": "1.0.0",
	"description": "Treasure-hunting adventures for the child at heart.",
	"repository": "git@github.com:adambraimbridge/goldbug.git",
	"author": "Adam Braimbridge <adam@braimbridge.com>",
	"license": "MIT",
	"prettier": "@adambraimbridge/prettierrc-2019-05",
	"scripts": {
		"start": "per-env",
		"start:production": "yarn run -s serve",
		"start:development": "yarn run -s dev",
		"build": "preact build --no-prerender",
		"serve": "preact build --no-prerender && preact serve",
		"dev": "preact watch",
		"lint": "eslint src",
		"test": "jest"
	},
	"eslintConfig": {
		"extends": "eslint-config-synacor"
	},
	"eslintIgnore": [
		"build/*"
	],
	"devDependencies": {
		"@adambraimbridge/prettierrc-2019-05": "^1.0.0",
		"eslint": "^4.9.0",
		"eslint-config-synacor": "^2.0.2",
		"eslint-plugin-react-hooks": "^2.0.1",
		"jest": "^21.2.1",
		"jest-preset-preact": "^1.0.0",
		"node-sass": "^4.12.0",
		"per-env": "^1.0.2",
		"preact-cli": "^3.0.0-rc.5",
		"preact-cli-plugin-fast-async": "^1.0.1",
		"preact-render-spy": "^1.2.1",
		"sass-loader": "7.3.1",
		"semantic-ui-forest-themes": "^1.0.3",
		"trianglify": "^2.0.0",
		"semantic-ui-react": "^0.88.1",
		"preact": "^10.0.0-rc.3",
		"preact-render-to-string": "^5.0.6",
		"preact-router": "^3.0.0"
	},
	"dependencies": {
		"@cloudant/cloudant": "^4.2.0",
		"gotrue-js": "^0.9.25"
	},
	"jest": {
		"preset": "jest-preset-preact"
	}
}
